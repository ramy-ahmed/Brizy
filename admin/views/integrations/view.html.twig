<div class="wrap">
    <h1>{{ title }}</h1>

    {% if accounts %}

        <form action="{{ pageLink }}" method="POST">
            <table class="wp-list-table widefat fixed striped posts">
                <thead>
                <tr>
                    <td id="cb" class="manage-column column-cb check-column">
                        <label class="screen-reader-text" for="cb-select-all-1">Select All</label>
                        <input id="cb-select-all-1" type="checkbox">
                    </td>
                    <th scope="col" id="title" class="manage-column column-title column-primary"
                        style="padding: 10px;">
                        <span>Identifier</span>
                    </th>
                    <th scope="col" id="title" class="manage-column column-title column-primary"
                        style="padding: 10px;">
                        <span>Data</span>
                    </th>
                </tr>
                </thead>

                <tbody id="the-list">
                {% for serviceId,service in accounts %}

                    {% for account in service %}
                        <tr class="iedit level-0">
                            <th scope="row" class="check-column">
                                <label class="screen-reader-text" for="cb-select-{{ account.getId() }}">
                                    Select Account</label>
                                <input id="cb-select-240" type="checkbox" name="account[{{ serviceId }}][]"
                                       value="{{ account.getId() }}">
                            </th>
                            <td class="title column-title has-row-actions column-primary" data-colname="Identifier"
                                width="300">
                                <strong>{{ account.getId() }}</strong>
                                <span class="row-actions">
                            <span class="trash">
                                <a href="{{ pageLink }}&account[{{ serviceId }}][]={{ account.getId() }}"
                                   class="submitdelete"
                                   onclick="confirm('Are you sure you want to completely remove the account')"
                                   aria-label="Move to the Trash">Delete</a>
                            </span>
                        </span>
                                <button type="button" class="toggle-row"><span
                                            class="screen-reader-text">Show more details</span>
                                </button>
                            </td>
                            <td class="title column-title has-row-actions column-primary" data-colname="Identifier">
                                <ul>
                                    {% for key,value in account.convertToAuthData() %}
                                        <li><strong style="display: inline">{{ key }}</strong> : <i>{{ value }}</i></li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                {% endfor %}
                </tbody>

                <tfoot>
                <tr>
                    <td class="manage-column column-cb check-column">
                        <label class="screen-reader-text" for="cb-select-all-2"> Select All</label>
                        <input id="cb-select-all-2" type="checkbox">
                    </td>
                    <td scope="col" class="manage-column column-title column-primary" style="padding: 10px;">
                        <span>Title</span>
                    </td>
                    <td scope="col" class="manage-column column-data column-primary" style="padding: 10px;">
                        <span>Data</span>
                    </td>
                </tr>
                </tfoot>

            </table>

            <div class="tablenav bottom">

                <div class="alignleft actions bulkactions">
                    <input type="submit" id="doaction2" class="button action" value="Delete"
                           onclick="confirm('Are you sure you want to completely remove the selected accounts')">
                </div>
            </div>
        </form>
    {% else %}
        <p>No accounts added.</p>
    {% endif %}
</div>